// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- USER & AUTH MODELS ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("guest") // guest or host

  accounts         Account[]
  sessions         Session[]
  listings         Listing[]  // Properties owned (for hosts)
  bookings         Booking[]  // Reservations made (for guests)
  reviews          Review[]   // Reviews written (for guests)
  travelerProfile  TravelerProfile? // AI matching preferences
  conversations    ConversationParticipant[] // Messaging
  messages         Message[]  // Messages sent

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// --- TRAVELER AI MATCHING PROFILE ---

model TravelerProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Travel Intent (primary reason for travel)
  travelIntent    String?  // remote_work, vacation, honeymoon, family, business, adventure, budget

  // Preferences
  preferredVibes  String[] // quiet, social, luxury, cozy, modern, rustic, urban, nature
  workNeeds       String[] // fast_wifi, dedicated_desk, monitor, ergonomic_chair, meeting_space
  mustHaveAmenities String[] // pool, gym, kitchen, parking, pet_friendly, washer, ac, heating

  // Budget and Style
  budgetRange     String?  // budget, moderate, luxury
  preferredTypes  String[] // apartment, house, condo, villa, studio

  // Travel Patterns
  typicalStayLength String? // short (1-3), medium (4-7), long (8-30), extended (30+)
  travelFrequency   String? // occasional, monthly, frequent

  // Location Preferences
  preferredLocations String[] // city, beach, mountain, countryside, downtown

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- APP DATA MODELS ---

model Listing {
  id                String   @id @default(cuid())
  title             String
  description       String
  price             Float    // Base price per night
  location          String
  type              String?
  bedrooms          String?
  bathrooms         String?
  maxGuests         Int      @default(4)
  amenities         String[]
  images            String[] // Array of image URLs
  imageSrc          String?  // Primary/cover image (legacy support)

  // AI & Smart Features
  smartPricing      Boolean  @default(true)
  maintenanceHealth String   @default("Good")
  matchScore        Int      @default(95)

  // AI Matching Attributes
  vibes             String[] // quiet, social, luxury, cozy, modern, rustic, urban, nature
  workFriendly      Boolean  @default(false)
  workAmenities     String[] // fast_wifi, dedicated_desk, monitor, ergonomic_chair
  wifiSpeed         Int?     // Mbps
  idealFor          String[] // remote_work, vacation, honeymoon, family, business, adventure

  // Dynamic Pricing
  basePrice         Float?   // Original base price
  currentPrice      Float?   // AI-adjusted current price
  demandScore       Int      @default(50) // 0-100, affects pricing
  seasonalMultiplier Float   @default(1.0)

  // Relations
  hostId            String
  host              User     @relation(fields: [hostId], references: [id], onDelete: Cascade)
  bookings          Booking[]
  reviews           Review[]
  pricingHistory    PricingHistory[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// --- DYNAMIC PRICING HISTORY ---

model PricingHistory {
  id          String   @id @default(cuid())
  listingId   String
  listing     Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  price       Float
  reason      String   // demand, seasonal, event, manual, ai_optimization
  demandScore Int?

  createdAt   DateTime @default(now())

  @@index([listingId])
}

// --- BOOKING & PAYMENT MODELS ---

model Booking {
  id              String   @id @default(cuid())
  checkIn         DateTime
  checkOut        DateTime
  guests          Int      @default(1)
  totalPrice      Float
  serviceFee      Float    // Platform commission (10%)
  status          String   @default("pending") // pending, confirmed, cancelled, completed

  // Relations
  guestId         String
  guest           User     @relation(fields: [guestId], references: [id], onDelete: Cascade)
  listingId       String
  listing         Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  payment         Payment?
  review          Review?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([guestId])
  @@index([listingId])
  @@index([status])
}

// --- REVIEWS & RATINGS ---

model Review {
  id          String   @id @default(cuid())
  rating      Int      // 1-5 stars
  comment     String?  @db.Text

  // Individual ratings
  cleanliness Int?     // 1-5
  accuracy    Int?     // 1-5
  checkIn     Int?     // 1-5
  communication Int?   // 1-5
  location    Int?     // 1-5
  value       Int?     // 1-5

  // Relations
  bookingId   String   @unique
  booking     Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  listingId   String
  listing     Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  guestId     String
  guest       User     @relation(fields: [guestId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([listingId])
  @@index([guestId])
}

model Payment {
  id                String   @id @default(cuid())
  amount            Float
  currency          String   @default("usd")
  status            String   @default("pending") // pending, succeeded, failed, refunded
  stripePaymentId   String?  @unique // Stripe payment intent ID
  stripeSessionId   String?  // Stripe checkout session ID

  // Relations
  bookingId         String   @unique
  booking           Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
}

// --- MESSAGING ---

model Conversation {
  id            String   @id @default(cuid())

  // Optional: link to a specific listing/booking for context
  listingId     String?
  bookingId     String?

  participants  ConversationParticipant[]
  messages      Message[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([listingId])
}

model ConversationParticipant {
  id              String   @id @default(cuid())

  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Track read status
  lastReadAt      DateTime?

  createdAt       DateTime @default(now())

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id              String   @id @default(cuid())
  content         String   @db.Text

  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId        String
  sender          User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())

  @@index([conversationId])
  @@index([senderId])
}